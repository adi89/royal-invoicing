#invoices-paginate
  = paginate @invoices, :remote => true
.row
  .col-md-7.col-md-offset-2
    .call-to-action-invoice-estimate
      = link_to 'Create Invoice', new_invoice_path(kind:  'invoice'), class: 'btn-success btn'
      / = link_to 'Make Estimate', new_billing_doc_path(kind:  'estimate'), class: 'btn-info btn'
      %br
    .invoices
      %h3
        #invoices-title
          Invoices
      %table#invoices-index-table
        %thead.invoice-index-table-header
          %th= link_to 'Due', '#', class: 'due-date-sort forward', data: {type: 'due_date', category: 'invoices'}
          %th Title
          %th Note
          %th= link_to " Contact(s)", "#", class: 'contact-sort forward', data: {type: 'contacts', category: 'invoices'}
          %th= link_to 'Total', '#', class: 'total-sort forward', data: {type: 'total', category: 'invoices'}
          %th= link_to 'Status', '#', class: 'status-sort forward', data: {type: 'state', category: 'invoices'}
        %tbody#invoice-table-entries
          = render @invoices
        / -@invoices.each do |invoice|
        /   %tr.line-item-show-row#invoices-row
        /     %td= invoice.due_date
        /     %td= link_to invoice.title, billing_doc_path(invoice)
        /     %td= invoice.note
        /     %td
        /       - invoice.contacts.each do |contact|
        /         = link_to(contact.name, contact_path(contact))
        /     %td= invoice.total
        /     %td= invoice.state