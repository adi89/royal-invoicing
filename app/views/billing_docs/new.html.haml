.row
  .col-md-7.col-md-offset-3
    .form-group
      = form_for @billing_doc, :remote => true do |f|
        = f.label :title
        = f.text_field :title, class: "control-group"
        = f.label :note
        = f.text_area :note, class: "control-group"
        %br
        .form-group
          .post-buttons
            = link_to 'Add Line Item', '#preview', class: 'btn btn-success preview-post', data: {preview: true}
            = f.submit "Create #{@billing_doc.kind.capitalize}", :class => 'btn btn-info'
        %br
    #preview
  .col-md-2