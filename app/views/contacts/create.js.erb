<% if @contact.valid? %>
    $('#create').hide();
    $('#added-contact').empty().append('<%= j render(:partial => 'added_contact') %>');
    $('#added-contact').show();
<% else %>
  <% flash[:error] = @contact.errors.full_messages.first %>
  $('#flash-validation-contact').append("<%= @contact.errors.full_messages.first %>")
<% end %>
