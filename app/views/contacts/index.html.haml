.row
  .col-lg-12
    .add-contact-button
      = link_to "Create Contact", new_group_contact_path(current_user.group.id), title: 'Add Contact', data: {gmodal: true}, class: 'btn btn-success btn-lg'
      %br
    #contact
      %h2
        #contact-header
          Top Contacts
      = render partial: 'top_contacts'
      %h2#contact-header
        All Contacts
      %table#contact-table.table-striped.table-hover
        %thead
          %th{colspan: "2"} name
          %th{colspan: "2"}= link_to " Company", sort_group_contacts_path(current_user.group.id), class: 'company-sort forward', data: {type: 'company', category: 'contacts', group_id: current_user.group.id}
          %th{colspan: "2"} email
          %th{colspan: "2"} phone-number
        %tbody#contacts-table-entries
          = render @contacts
      #contacts-paginate
        = paginate @contacts, :remote => true
